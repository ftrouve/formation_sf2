<div class="blog-post">

     <h2 class="blog-post-title"><a href="{{ path('trouve_blog_postShow', {'slug': post.slug }) }}">{{post.title}}</a></h2>
    <p class="blog-post-meta">{{post.created|date('j/m/Y')}} by <a href="#">admin</a></p>
    <p>{{ post.body | truncate(150, true, '... ') }}<a href="#">Lire la suite</a></p>
    {% for category in post.categories %}
        <button type="button" class="btn btn-xs btn-primary">{{ category.name}} </button>
    {% endfor %}
</div>